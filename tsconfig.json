{
	"compilerOptions": {
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"isolatedModules": true,
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"lib": [
			"DOM",
			"ESNext"
		],
		"types": [
			"vite/client"
		],
		"paths": {
			"@/*": ["./resources/js/*"],
			"@/images/*": ["./resources/images/*"],
			// siehe auch vite.config.json
			"ziggy-js": ["./vendor/tightenco/ziggy"]
		}
	},
	"include": [
		"resources/js/**/*.ts", 
		"resources/js/**/*.d.ts", 
		"resources/js/**/*.vue"
	]
}
